extends layout

block content
  h1= title
  select
    each item in items
        option= item._id.artist
  p Add a new song:

  form(method="post",action="/new")
    p
        label(for='artist') artist
    p
        input#artist(type="text", placeholder="artist", name="artist")
    p
        label(for='title') title
    p
        input#title(type="text", placeholder="title", name="title")
    p
        label(for='video') video
    p
        input#video(type="text", placeholder="video", name="video")
    p
        label(for='capo') capo
    p
        input#capo(type="text", placeholder="capo", name="capo")
    p
        label(for='words') words
    p
        textarea#words(type="text", placeholder="words", name="words")
    p
        input.btn.btn-primary.btn-lg(type='submit', value='Add')